.main__message__user
  .main__message__user--name
    = message.user.name
  .main__message__user--date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main__message__comment
  - if message.content.present?
    %p.main__message__comment__content
      = message.content
  = image_tag message.image.url, class: 'main__message__comment__image' if message.image.present?