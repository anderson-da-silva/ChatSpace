.sideBar
  .sideBar__upper
    .sideBar__upper__user
      .sideBar__upper__user__name
        = current_user.name
      .sideBar__upper__user__menu
        = link_to new_group_path do
          = icon('fa', 'edit', class:'sideBar__upper__user__menu--icon')
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class:'sideBar__upper__user__menu--icon')
          %span<>
  .sideBar__lower
    .sideBar__lower__group
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .sideBar__lower__group__name
            = group.name
          .sideBar__lower__group__message
            = group.show_last_message